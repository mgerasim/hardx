<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                    assembly="HardX"
                   namespace="HardX.Models">
  
  <class name="Branche" table="BRANCHES" lazy="false">
   
    <id name="Id" column="id" type="int">
      
      <generator class="sequence">
        <param name="sequence">SEQ_BRANCHES</param>
      </generator>
    </id>    
    <property name="FullName"  column="name" type="String" length="255"/>
    <property name="ShortName" column="short_name" type="String" length="255"/>
    
  </class>
</hibernate-mapping>