<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                    assembly="HardX"
                   namespace="HardX.Models">
  
  <class name="Role" table="roles" lazy="false">
   
    <id name="Id" column="id" type="int">
      
      <generator class="sequence">
        <param name="sequence">SEQ_ROLES</param>
      </generator>
    </id>    
    <property name="Name"  column="name" type="String" length="255"/>

    <set name="Actions" table="actions_roles" lazy="false">
      <key column = "role_id" />
      <many-to-many class="Action" column="action_id" />
    </set>
    
    
  </class>
</hibernate-mapping>