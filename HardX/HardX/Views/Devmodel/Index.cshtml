@model IEnumerable<HardX.Models.Devmodel>

@{
    ViewBag.Title = "Список оборудования";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить оборудование", "Create")
</p>
<table>
    <tr>        
        <th>
            Наименование
        </th>
        <th>
            Тип
        </th>
        <th>
            Производитель
        </th>
        <th>
            Скорость печати
        </th>
		<th>
            Ресурс
        </th>
		<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @item.Name
        </td>
        <td>
            @item.Typedev.Name
        </td>
        <td>
            @item.Vendor.Name
        </td>
		<td>
            @item.Printspeed
        </td>
		<td>
            @item.Capacity
        </td>
		<td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Просмотр", "Details", new { id=item.Id }) |
			@Html.ActionLink("Совместимость", "Compatibility", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }, new { onclick = "return confirm('Вы действительно хотите удалить?');" })
        </td>
    </tr>
}

</table>



