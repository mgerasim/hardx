@model IEnumerable<HardX.Models.House>


@{
    ViewBag.Title = "Список зданий";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить здание", "Create")
</p>
<table>
    <tr>
        <th>
			Имя
        </th>
		
		<th>
			Улица
        </th>

        <th>
			Населённый пункт
        </th>
				
        <th>
			Район
        </th>

		
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
		<td>
            @item.Name
        </td>
		<td>
            @item.Street.Name
        </td>
		<td>
            @item.Street.Town.Name
        </td>
		<td>
            @item.Street.Town.Region.Name
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Просмотр", "Details", new { id=item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID }, new { onclick = "return confirm('Вы действительно хотите удалить?');" })
        </td>        
    </tr>
}

</table>

