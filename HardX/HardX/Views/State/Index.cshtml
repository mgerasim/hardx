@model IEnumerable<HardX.Models.State>


@{
    ViewBag.Title = "Список регионов";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить регион", "Create")
</p>
<table>
    <tr>
        <th>
			Имя
        </th>
        <th>
			Филиал
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
		<td>
            @item.Name
        </td>
		<td>
            @item.Branche.FullName
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Просмотр", "Details", new { id=item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID }, new { onclick = "return confirm('Вы действительно хотите удалить?');" })
        </td>        
    </tr>
}

</table>

