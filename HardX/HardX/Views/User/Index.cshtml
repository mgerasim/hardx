@model IEnumerable<HardX.Models.User>

@{
    ViewBag.Title = "Список пользователей";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Добавить пользователя", "Create")
</p>
<table>
    <tr>        
        <th>
            Учетная запись
        </th>
        <th>
            Имя
        </th>
        <th>
            Филиал
        </th>
		<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @item.Login
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Branche.FullName
        </td>
		<td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Просмотр", "Details", new { id=item.Id })             
        </td>
    </tr>
}

</table>

